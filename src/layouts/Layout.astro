---
import '@styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Prefooter from '@components/Prefooter.astro';
import ClientRouter from 'astro/components/ClientRouter.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="InfoValorant, conoce todo a cerca del juego Valorant, las modalidades, agentes y mÃ¡s." />
		<meta name="keywords" content="Valorant, juego, agentes, modalidades, InfoValorant" />
		<link rel="icon" type="image/webp" href="/logo.webp" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="bg-gray-800 min-h-dvh flex flex-col justify-between">
		<Header />
		<main class="flex-1">
			<slot />
		</main>
		<Prefooter />
		<Footer />
	</body>
</html>

<style>
	body {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}

	@font-face {
		font-family: 'Monaspace-krypton';
		src: url('/fonts/MonaspaceKrypton-Regular.woff')
	}

	@font-face {
		font-family: 'Dharma-Gothic';
		src: url('/fonts/DharmaGothicRndE-Bold.woff')
	}
</style>