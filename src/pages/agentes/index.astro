---
import Layout from '@layouts/Layout.astro';
import { getAgents } from '@api/query.ts';
import AgentCard from '@components/AgentCard.astro';

const agents = await getAgents();
---

<Layout title="Info Valorant | Agentes">
  <section class="max-w-[1920px] bg-black-play py-16 text-white-play mx-auto flex flex-col items-center justify-center">
    <h1 class="text-7xl font-semibold text-center mb-5 font-secondary">AGENTES</h1>

    <article class="grid justify-items-center grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-7 mt-8">
      {
        agents.map(({ uuid, displayName, displayIcon, bustPortrait, backgroundGradientColors, role }) => (
          <AgentCard
            id={`agent-${role?.displayName.toLowerCase()}`} 
            uuid={uuid}
            displayName={displayName}
            displayIcon={displayIcon}
            bustPortrait={bustPortrait}
            backgroundGradientColors={backgroundGradientColors}
            roleName={`${role?.displayName.toUpperCase()}`}
          />
        ))
      }
    </article>
  </section>
</Layout>