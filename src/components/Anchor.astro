---
interface Props {
  href: string
  label: string
  available?: boolean
  isHome?: boolean
}

const { href, label, available, isHome } = Astro.props
const currentPath = `/${Astro.url.pathname.split('/').slice(1)[0]}`

const homeStyle = isHome ? 'bg-[#cbd5e0] text-black home-polygon w-60 hover:bg-[#e2e8f0]' : ' w-36'
const routeCurrentStyle = currentPath === href ? 'font-bold pointer-events-none' : 'font-light'
---

<a
  class=`${available ? '' : 'pointer-events-none'} ${homeStyle} ${routeCurrentStyle} relative py-3 text-center duration-400 transition-all hover:font-bold`
  href={href}
>
  { label }
  <span class=`${available ? 'invisible' : ''} absolute py-3 inset-0 pt-8 text-[10px] font-bold text-red-500`>PRÃ“XIMAMENTE</span>
</a>

<style>
  .home-polygon {
    clip-path: polygon(0 0, 100% 0, 80% 100%, 20% 100%);
  }
</style>


